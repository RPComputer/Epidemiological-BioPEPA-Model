//GOLDBETER MODEL 1991

//Kind of model
stochastic 

//
//constant definition concerning species
//
const int Nc = 1;
const int Nm = 1;
const int Nx = 1;
const int Nxi = 1;
const int Nmi = 1;

//steps
const double Hc = 0.01;
const double Hm = 0.04;
const double Hx = 0.04;
const double Hxi = 0.06;
const double Hmi = 0.06;

//rates
const double vi = 0.05;
const double vd = 0.025;
const double kd = 0.01;
const double kc = 0.5;
const double Vm1 = 3;
const double Vm2 = 1;
const double Kd = 0.2;
const double V2 = 1.5;
const double V4 = 0.5;
const double K1 = 0.005;
const double K2 = 0.005;
const double K3 = 0.005;
const double K4 = 0.005;

//GLOBAL VARIABLES (SPECIES)
global cyclin : [1..Nc] init Nc;
global kinase : [1..Nm] init Nm;
global kinasei : [1..Nmi] init Nmi;
global protease : [1..Nx] init Nx;
global proteasei : [1..Nxi] init Nxi;

//MODULES (REACTIONS)

//module creation of C
module 
 cyclin<Nc -> vi: (cyclin' = cyclin +1);
endmodule

//module degradation of C
module 
 cyclin>0 -> kd*cyclin*Hc: (cyclin' = cyclin -1);
endmodule

//activation of kinase
module 
 cyclin>0 & kinase<Nm & kinasei>0->
((cyclin*Hc*Vm1 )/(Kc + cyclin*Hc) )*(kinasei*Hmi/(K1+kinasei*Hmi)):              
(kinasei' = kinasei-1 & kinase'= kinase +1);
endmodule

//deactivation of kinase
module 
 kinase>0 & kinasei<Nmi->(kinase*Hm*V2)/(K2 +kinase*Hm): 
   (kinase' = kinase-1 & kinasei'= kinasei +1);
endmodule

//activation of protease
module 
 kinase>0 & protease<Nx & proteasei>0->: kinase*Hm*proteasei*Hxi*Vm3/(K3+proteasei*Hxi)            
(proteasei' = proteasei-1 & protease'= protease +1);
endmodule

//deactivation of protease
module 
protease>0 & proteasei<Nxi->: (protease*Hx*V4)/(K4 +protease*Hx)
   (protease' = protease-1 & proteasei'= proteasei+1);
endmodule

//degradation of Cyclin by means of the protease

module
 protease>0 & cyclin >0 -> : (cyclin*Hc*vd *protease*Hx)/(cyclin*Hc + Kd) 
endmodule







